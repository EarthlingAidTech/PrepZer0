  <form action="" method="GET">
    <header>
      <select id="semesterSelect" name="semester">
        <option value="">Select Semester</option>
        <option value="1" <%= currentFilters.semester === '1' ? 'selected' : '' %>>1</option>
        <option value="2" <%= currentFilters.semester === '2' ? 'selected' : '' %>>2</option>
        <option value="3" <%= currentFilters.semester === '3' ? 'selected' : '' %>>3</option>
        <option value="4" <%= currentFilters.semester === '4' ? 'selected' : '' %>>4</option>
        <option value="5" <%= currentFilters.semester === '5' ? 'selected' : '' %>>5</option>
        <option value="6" <%= currentFilters.semester === '6' ? 'selected' : '' %>>6</option>
        <option value="7" <%= currentFilters.semester === '7' ? 'selected' : '' %>>7</option>
        <option value="8" <%= currentFilters.semester === '8' ? 'selected' : '' %>>8</option>
      </select>

      <select id="departmentSelect" name="department">
        <option value="">Select Department</option>
        <option value="CS" <%= currentFilters.department === 'CS' ? 'selected' : '' %>>CS</option>
        <option value="IS" <%= currentFilters.department === 'IS' ? 'selected' : '' %>>ISE</option>
        <option value="Mech" <%= currentFilters.department === 'Mech' ? 'selected' : '' %>>Mech</option>
        <option value="Civil" <%= currentFilters.department === 'Civil' ? 'selected' : '' %>>Civil</option>
        <option value="EC" <%= currentFilters.department === 'EC' ? 'selected' : '' %>>ECE</option>
        <option value="EEE" <%= currentFilters.department === 'EEE' ? 'selected' : '' %>>EEE</option>
      </select>

      <input type="text" id="usnSearch" name="usn" placeholder="Enter USN" value="<%= currentFilters.usn %>" />
      <button type="submit">Search</button>
    </header>
  </form>

  <div class="students-container" id="studentList">
    <% if(students && students.length > 0) { %>
      <% students.forEach(student => { %>
        <div class="student-card">
          <img src="<%= student.imageurl || 'https://randomuser.me/api/portraits/men/1.jpg' %>" alt="<%= student.name %>" />
          <div class="student-info">
            <span>USN: <%= student.USN || 'N/A' %></span>
            <span>Dept: <%= student.Department || 'N/A' %> | Sem: <%= student.Semester || 'N/A' %></span>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="no-students">
        <p>No students found</p>
      </div>
    <% } %>
  </div>

