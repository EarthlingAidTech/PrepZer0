<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary-color: #6366f1;
      --primary-dark: #4f46e5;
      --secondary-color: #f97316;
      --text-color: #1e293b;
      --light-bg: #f8fafc;
      --card-bg: #ffffff;
      --border-color: #e2e8f0;
      --success-color: #10b981;
      --error-color: #ef4444;
      --warning-color: #f59e0b;
      --gold: #f59e0b;
      --silver: #94a3b8;
      --bronze: #d97706;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--light-bg);
      color: var(--text-color);
      line-height: 1.6;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    .header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid var(--primary-color);
    }
    
    .logo {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--primary-color);
      display: flex;
      align-items: center;
    }
    
    .logo span {
      color: var(--secondary-color);
    }
    
    .report-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-color);
    }
    
    .action-buttons {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 1.5rem;
    }
    
    .btn {
      padding: 0.5rem 1.25rem;
      border-radius: 0.375rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 0.875rem;
      border: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
    
    .btn-primary {
      background-color: var(--primary-color);
      color: white;
    }
    
    .btn-primary:hover {
      background-color: var(--primary-dark);
    }
    
    .btn-warning {
      background-color: var(--warning-color);
      color: white;
    }
    
    .btn-warning:hover {
      background-color: #d97706;
    }
    
    .card {
      background-color: var(--card-bg);
      border-radius: 0.5rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    
    .card-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: var(--primary-dark);
      border-bottom: 1px solid var(--border-color);
      padding-bottom: 0.5rem;
    }
    
    .student-info {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    
    .info-item {
      margin-bottom: 0.5rem;
    }
    
    .info-label {
      font-weight: 500;
      color: var(--text-color);
    }
    
    .info-value {
      font-weight: 400;
      color: var(--text-color);
    }
    
    .score-card {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      padding: 2rem;
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white;
      border-radius: 0.5rem;
    }
    
    .score-title {
      font-size: 1.25rem;
      margin-bottom: 0.5rem;
    }
    
    .score-value {
      font-size: 3rem;
      font-weight: 700;
    }
    
    .score-max {
      font-size: 1.5rem;
      opacity: 0.8;
    }
    
    .time-analysis, .integrity-report {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    
    .integrity-status {
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      font-weight: 600;
      text-align: center;
      margin-top: 1rem;
    }
    
    .status-acceptable {
      background-color: rgba(16, 185, 129, 0.2);
      color: var(--success-color);
    }
    
    .status-unacceptable {
      background-color: rgba(239, 68, 68, 0.2);
      color: var(--error-color);
    }
    
    .questions-list {
      margin-top: 2rem;
    }
    
    .question-item {
      background-color: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    
    .question-text {
      font-size: 1.1rem;
      font-weight: 500;
      margin-bottom: 1rem;
    }
    
    .options-list {
      list-style-type: none;
      margin-bottom: 1rem;
    }
    
    .option-item {
      padding: 0.5rem;
      margin-bottom: 0.5rem;
      border-radius: 0.25rem;
      border: 1px solid var(--border-color);
    }
    
    .option-correct {
      background-color: rgba(16, 185, 129, 0.1);
      border-color: var(--success-color);
    }
    
    .option-incorrect {
      background-color: rgba(239, 68, 68, 0.1);
      border-color: var(--error-color);
    }
    
    .answer-info {
      display: flex;
      justify-content: space-between;
      margin-top: 1rem;
      padding-top: 0.5rem;
      border-top: 1px solid var(--border-color);
    }
    
    .answer-label {
      font-weight: 500;
    }
    
    .answer-value {
      font-weight: 600;
    }
    
    .answer-correct {
      color: var(--success-color);
    }
    
    .answer-incorrect {
      color: var(--error-color);
    }

    /* Ranking styles */
    .rank-info {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 1rem;
    }
    
    .rank-badge {
      background-color: var(--primary-dark);
      color: white;
      font-size: 1.5rem;
      font-weight: 700;
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 1rem;
    }

    .rank-text {
      font-size: 1.25rem;
      font-weight: 600;
    }

    .top-performers {
      margin-top: 2rem;
    }

    .performer-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }

    .performer-table th,
    .performer-table td {
      padding: 0.75rem;
      text-align: left;
      border-bottom: 1px solid var(--border-color);
    }

    .performer-table th {
      background-color: rgba(99, 102, 241, 0.1);
      font-weight: 600;
    }

    .rank-1, .rank-2, .rank-3 {
      font-weight: 700;
    }

    .rank-1 {
      color: var(--gold);
    }

    .rank-2 {
      color: var(--silver);
    }

    .rank-3 {
      color: var(--bronze);
    }
    
    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }
    
    .modal-content {
      background-color: var(--card-bg);
      margin: 15% auto;
      padding: 2rem;
      border-radius: 0.5rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      position: relative;
    }
    
    .modal-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: var(--text-color);
    }
    
    .modal-text {
      margin-bottom: 1.5rem;
      color: var(--text-color);
    }
    
    .modal-actions {
      display: flex;
      justify-content: flex-end;
      gap: 0.75rem;
    }
    
    .btn-danger {
      background-color: var(--error-color);
      color: white;
    }
    
    .btn-danger:hover {
      background-color: #dc2626;
    }
    
    .btn-secondary {
      background-color: #94a3b8;
      color: white;
    }
    
    .btn-secondary:hover {
      background-color: #64748b;
    }
    
    @media (max-width: 768px) {
      .container {
        padding: 1rem;
      }
      
      .header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .score-card {
        padding: 1.5rem;
      }
      
      .score-value {
        font-size: 2.5rem;
      }
      
      .answer-info {
        flex-direction: column;
        gap: 0.5rem;
      }

      .performer-table {
        font-size: 0.875rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="logo">PrepZer<span>0</span></div>
      <div class="report-title">Assessment Report</div>
    </header>
    
    <div class="action-buttons">
      <button id="allowRetestBtn" class="btn btn-warning">Allow Retest</button>
    </div>
    
    <section class="card">
      <h2 class="card-title">Candidate Details</h2>
      <div class="student-info">
        <div class="info-item">
          <span class="info-label">Name:</span>
          <span class="info-value"><%= report.student.fname %> <%= report.student.lname %></span>
        </div>
        <div class="info-item">
          <span class="info-label">USN:</span>
          <span class="info-value"><%= report.student.USN %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Department:</span>
          <span class="info-value"><%= report.student.Department %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Semester:</span>
          <span class="info-value"><%= report.student.Semester %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Email:</span>
          <span class="info-value"><%= report.student.email %></span>
        </div>
      </div>
    </section>
    
    <section class="card score-card">
      <div class="score-title">Assessment Score</div>
      <div class="score-value"><%= report.score.obtained %><span class="score-max">/<%= report.score.total %></span></div>
      <div class="rank-info">
        <div class="rank-badge">#<%= report.ranking.rank %></div>
        <div class="rank-text">Rank <%= report.ranking.rank %> of <%= report.ranking.totalStudents %></div>
      </div>
    </section>

    <section class="card">
      <h2 class="card-title">Top Performers</h2>
      <div class="top-performers">
        <table class="performer-table">
          <thead>
            <tr>
              <th>Rank</th>
              <th>Name</th>
              <th>Score</th>
              <th>Submission Time</th>
            </tr>
          </thead>
          <tbody>
            <% report.ranking.topPerformers.forEach((performer, index) => { %>
              <tr class="<%= index === 0 ? 'rank-1' : (index === 1 ? 'rank-2' : (index === 2 ? 'rank-3' : '')) %>">
                <td>#<%= index + 1 %></td>
                <td><%= performer.studentName %></td>
                <td><%= performer.score %>/<%= report.score.total %></td>
                <td><%= new Date(performer.submittedAt).toLocaleString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>
    
    <section class="card">
      <h2 class="card-title">Test Time Analysis</h2>
      <div class="time-analysis">
        <div class="info-item">
          <span class="info-label">Test Start Time:</span>
          <span class="info-value"><%= report.timeAnalysis.startTime.toLocaleString() %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Test End Time:</span>
          <span class="info-value"><%= report.timeAnalysis.endTime.toLocaleString() %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Test Duration:</span>
          <span class="info-value"><%= report.timeAnalysis.duration %></span>
        </div>
      </div>
    </section>
    
    <section class="card">
      <h2 class="card-title">Integrity Report</h2>
      <div class="integrity-report">
        <div class="info-item">
          <span class="info-label">Copy Attempts:</span>
          <span class="info-value"><%= report.integrity.data.copyAttempts || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Focus Changes:</span>
          <span class="info-value"><%= report.integrity.data.focusChanges || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Full Screen Exits:</span>
          <span class="info-value"><%= report.integrity.data.fullscreenExits || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Last Event:</span>
          <span class="info-value"><%= report.integrity.data.lastEvent || 'N/A' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Mouse Outs:</span>
          <span class="info-value"><%= report.integrity.data.mouseOuts || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Paste Attempts:</span>
          <span class="info-value"><%= report.integrity.data.pasteAttempts || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Screen Configuration:</span>
          <span class="info-value"><%= report.integrity.data.screenConfiguration || 'Unknown' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Tab Changes:</span>
          <span class="info-value"><%= report.integrity.data.tabChanges || 0 %></span>
        </div>
      </div>
      <div class="integrity-status <%= report.integrity.status === 'Acceptable' ? 'status-acceptable' : 'status-unacceptable' %>">
        Integrity Index: <%= report.integrity.status %>
      </div>
    </section>
    
    <section class="card">
      <h2 class="card-title">Assessment Questions</h2>
      <div class="questions-list">
        <% report.questions.forEach((question, index) => { %>
          <div class="question-item">
            <div class="question-text"><%= index + 1 %>. <%= question.question %></div>
            <ul class="options-list">
              <% question.options.forEach((option, optIndex) => { %>
                <li class="option-item <%= option === question.correctAnswer ? 'option-correct' : (option === question.submittedAnswer && option !== question.correctAnswer ? 'option-incorrect' : '') %>">
                  <%= String.fromCharCode(65 + optIndex) %>. <%= option %>
                </li>
              <% }); %>
            </ul>
            <div class="answer-info">
              <div>
                <span class="answer-label">Correct Answer:</span>
                <span class="answer-value answer-correct">
                  <%= question.options.findIndex(opt => opt === question.correctAnswer) !== -1 ? 
                      String.fromCharCode(65 + question.options.findIndex(opt => opt === question.correctAnswer)) : 'N/A' %>.
                  <%= question.correctAnswer %>
                </span>
              </div>
              <div>
                <span class="answer-label">Submitted Answer:</span>
                <span class="answer-value <%= question.isCorrect ? 'answer-correct' : 'answer-incorrect' %>">
                  <%= question.submittedAnswer === 'Not answered' ? 'Not answered' : 
                      (question.options.findIndex(opt => opt === question.submittedAnswer) !== -1 ? 
                      String.fromCharCode(65 + question.options.findIndex(opt => opt === question.submittedAnswer)) + '. ' + 
                      question.submittedAnswer : 'Invalid') %>
                </span>
              </div>
              <div>
                <span class="answer-label">Marks:</span>
                <span class="answer-value <%= question.isCorrect ? 'answer-correct' : 'answer-incorrect' %>">
                  <%= question.isCorrect ? question.marks : 0 %>/<%= question.marks %>
                </span>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  </div>
  
  <!-- Confirmation Modal -->
  <div id="confirmationModal" class="modal">
    <div class="modal-content">
      <div class="modal-title">Confirm Delete</div>
      <div class="modal-text">
        Are you sure you want to delete this candidate record and allow a retest? This action cannot be undone.
      </div>
      <div class="modal-actions">
        <button id="cancelBtn" class="btn btn-secondary">Cancel</button>
        <button id="confirmBtn" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const modal = document.getElementById('confirmationModal');
      const allowRetestBtn = document.getElementById('allowRetestBtn');
      const cancelBtn = document.getElementById('cancelBtn');
      const confirmBtn = document.getElementById('confirmBtn');
      
      // Get necessary IDs from the page
      const userId = '<%= report.student._id %>'; 
      const examId = '<%= report.exam._id %>';
      const submissionId = '<%= submissionId %>';
      
      // Open modal when "Allow Retest" button is clicked
      allowRetestBtn.addEventListener('click', function() {
        modal.style.display = 'block';
      });
      
      // Close modal when "Cancel" button is clicked
      cancelBtn.addEventListener('click', function() {
        modal.style.display = 'none';
      });
      
      // Handle delete confirmation
      confirmBtn.addEventListener('click', function() {
        // Send POST request to delete candidate submission and integrity data
        fetch('/admin/api/submission/delete', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            userId: userId,
            examId: examId,
            submissionId: submissionId
          })
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(data => {
          alert('Records successfully deleted. The candidate can now retake the test.');
          // Redirect to candidates list for this exam
          window.location.href = '/admin' + examId;
        })
        .catch(error => {
          console.error('Error:', error);
        })
        .finally(() => {
          modal.style.display = 'none';
        });
      });
      
      // Close modal if user clicks outside of it
      window.addEventListener('click', function(event) {
        if (event.target === modal) {
          modal.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>