        }
        .completed-exam {
            border-left: 4px solid #dc3545;
        }
        .badge-custom {
            font-size: 85%;
        }
        .progress {
            height: 10px;
        }
        .avatar-container {
            display: inline-block;
            position: relative;
        }
        .avatar-badge {
            position: absolute;
            bottom: 0;
            right: 0;
            background: #28a745;
            height: 15px;
            width: 15px;
            border-radius: 50%;
            border: 2px solid white;
        }
        @media (max-width: 768px) {
            .dashboard-header {
                padding: 15px 0;
            }
            .dashboard-header h1 {
