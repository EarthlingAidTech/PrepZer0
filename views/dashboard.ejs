            }
        }
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            font-size: 10px;
        }
        .section-title {
            position: relative;
            margin-bottom: 20px;
            padding-bottom: 10px;
        }
        .section-title:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            height: 3px;
            width: 50px;
            background-color: #007bff;
        }
        .nav-tabs .nav-link.active {
            color: white;
            background-color: #1F2937;
            border-color: #4F46E5;
            border-width: 2px;
        }
        .nav-tabs .nav-link {
            color: white;
            background-color: #1F2937;
        }
        .nav-tabs{
            border-bottom: none;
        }
        .navbar {
            background-color: #121827 !important;
        }
        .bg-white {
            background-color: #1F2937 !important;
        }
        .bg-dark {
            background-color: #1F2937 !important;
        }
        .tab-content{
            margin-top: 1rem;
        }
        .card-body{
            background-color: #1F2937;
            color: #fff;
        }
        .text-muted {
            color: #fff !important;
        }

    </style>
