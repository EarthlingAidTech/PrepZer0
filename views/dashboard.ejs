    <!-- Exam Rules & Camera Permission Modal -->
    <!-- Modal HTML -->
    <div
    class="modal fade"
    id="examRulesModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="examRulesModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content themed-modal">
        <div class="modal-header themed-modal-header">
          <h5 class="modal-title" id="examRulesModalLabel">
            Exam Rules &amp; Permissions
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body themed-modal-body">
          <p><strong>Rules for Examination:</strong></p>
          <ul>
            <li>Ensure you are alone in the room.</li>
            <li>Do not navigate away from the exam window.</li>
            <li>Keep your camera on at all times.</li>
            <li>Any suspicious activity may result in disqualification.</li>
          </ul>
          <p><strong>Camera Access:</strong></p>
          <p>
            We need to turn on your camera for proctoring. Click "Allow" when
            prompted.
          </p>
          <button id="requestCamera" class="btn themed-btn-secondary">
            Enable Camera
          </button>
          <p id="cameraStatus" class="text-muted mt-2"></p>
        </div>
        <div class="modal-footer themed-modal-footer">
          <button type="button" class="btn themed-btn-danger" data-dismiss="modal">
            Cancel
          </button>
          <button id="confirmStartTest" class="btn themed-btn-primary" disabled>
            Start Test
          </button>
        </div>
      </div>
    </div>
  </div>
  

