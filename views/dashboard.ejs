  /* Card styling for a cleaner, full-width look */
  .card {
    font-family: 'Work Sans', sans-serif;
    border: none;
    border-radius: 0.75rem;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    margin-bottom: 1.5rem;
    transition: box-shadow 0.3s ease-in-out;
  }
  .card:hover {
  box-shadow: 0 4px 12px rgba(81, 80, 234, 0.3); /* Soft purple glow */
  transform: translateY(-2px); /* Slight lift effect */
  cursor: pointer;
}
  .card-header {
    background: none;
    border-bottom: none;
    font-size: 1.75rem;
    font-weight: 600;
    padding: 1rem 1.25rem 0.5rem;
  }
  .card-body {
    padding: 0 1.25rem 0.5rem;
  }
  .card-text {
    font-size: 1.1rem;
    margin-bottom: 0.3rem; /* reduced line spacing */
  }
  .card-footer {
    background: none;
    border-top: none;
    padding: 0 1.25rem 1rem;
  }
  /* Modal Theming Styles */
  .themed-modal {
  background-color: #fff;
  border-radius: 8px;
  font-family: 'Work Sans', sans-serif;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
}

.themed-modal-header {
  background: linear-gradient(90deg, #5150ea 30%, #7a42ea 70%, #8639ea 100%);
  color: #fff;
  padding: 1rem;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  border-bottom: none;
}

.themed-modal-header .modal-title {
  font-weight: 600;
}

.themed-modal-header .close {
  color: #fff;
  opacity: 1;
}

.themed-modal-body {
  padding: 1rem;
}

.themed-modal-body p,
.themed-modal-body ul {
  font-size: 1rem;
  margin-bottom: 0.5rem;
}

.themed-modal-body ul li {
  margin-bottom: 0.5rem;
}

.themed-modal-footer {
  border-top: none;
  padding: 0.75rem 1rem 1rem;
  display: flex;
  justify-content: flex-end;
  gap: 10px;
}

/* Primary Button (Start Test) */
.themed-btn-primary {
  background: linear-gradient(90deg, #5150ea 30%, #7a42ea 70%, #8639ea 100%);
  color: #fff;
  border: none;
  padding: 8px 20px;
  font-size: 16px;
  border-radius: 8px;
}

.themed-btn-primary:hover {
  background: linear-gradient(90deg, #8639ea 30%, #7a42ea 70%, #5150ea 100%);
}

/* Force disabled primary button to keep white text */
.themed-btn-primary:disabled {
  color: #fff !important;
  opacity: 1;
}

/* Secondary Button (Enable Camera) */
