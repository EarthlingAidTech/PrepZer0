    // Create HTML for test cases
    createTestCasesHTML() {
        return this.testCases.map((testCase, index) => `
            <div class="test-case">
                <h4>Test Case ${index + 1}</h4>
                <p><strong>Input:</strong></p>
                <div class="test-input">${testCase.input}</div>
                <p><strong>Expected Output:</strong></p>
